@model Hotel.CLIENTS
@{
    ViewBag.Title = "Изменение уч. записи";
}

<h2>Изменение учётной записи</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Фамилия: ");
        <div class="col-md-10">
            @Html.EditorFor(model => model.FAM, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FAM, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Имя: ");
        <div class="col-md-10">
            @Html.EditorFor(model => model.IM, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IM, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Отчество: ");
        <div class="col-md-10">
            @Html.EditorFor(model => model.OT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OT, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Пароль: ");
        <div class="col-md-10">
            @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Тип документа: ");
        <div class="col-md-10">
            @Html.EditorFor(model => model.DOC_TYPE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DOC_TYPE, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Серия документа: ");
        <div class="col-md-10">
            @Html.EditorFor(model => model.SERIAL_DOC, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SERIAL_DOC, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Номер документа: ");
        <div class="col-md-10">
            @Html.EditorFor(model => model.NUMBER_DOC, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NUMBER_DOC, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Пол: ");
        <div class="col-md-10">
            @Html.EditorFor(model => model.GENDER, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GENDER, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Изменить" class="btn btn-default" />
        </div>
        @if (ViewBag.Message != null)
        {
            <div class="form-group">
                <div class="col-md-10">@ViewBag.Message</div>
            </div>
        }
    </div>
}
